<!-- Banner mit Movie Theater Bild (niedrigere Höhe) -->
<div class="container-fluid p-0 mb-5">
  <div class="position-relative text-center" style="height: 300px; overflow: hidden;">
    <img src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
         class="img-fluid w-100 h-100 object-fit-cover" alt="Movie Theater and popcorn">
    <h2 class="position-absolute top-50 start-50 translate-middle text-white bg-dark bg-opacity-50 p-3 rounded">
      My Watchlists
    </h2>
  </div>
</div>

<!-- Listen als Cards mit Bild und Titel über Bild -->
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if list.image.present? %>
            <!-- Card mit Bild und Titel über Bild -->
            <div class="position-relative">
              <img src="<%= list.image %>" class="card-img-top" alt="<%= list.name %>" style="height: 200px; object-fit: cover;">
              <h5 class="position-absolute top-50 start-50 translate-middle text-white bg-dark bg-opacity-50 p-2 rounded text-center">
                <%= list.name %>
              </h5>
            </div>
          <% else %>
            <!-- Card ohne Bild, Titel zentriert -->
            <div class="card-body d-flex flex-column justify-content-center align-items-center" style="height: 200px;">
              <h5 class="text-center"><%= list.name %></h5>
            </div>
          <% end %>

          <!-- Button immer unten -->
          <div class="card-body d-flex flex-column mt-auto">
            <%= link_to list_path(list), class: "btn btn-outline-primary mt-auto" do %>
              <i class="fas fa-eye me-1"></i> View List
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
