<!-- Formularbereich zentriert -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4 mb-5">
        <h1 class="text-center mb-4">Create a New List</h1>

        <%= simple_form_for(@list, html: { class: "needs-validation" }) do |f| %>
          <div class="mb-3">
            <%= f.input :name, input_html: { class: "form-control", placeholder: "Enter list name" }, label: "List Name" %>
          </div>

          <div class="mb-3">
            <%= f.input :image, input_html: { class: "form-control", placeholder: "Image URL (optional)" }, label: "Image URL" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Create List", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
