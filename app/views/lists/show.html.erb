<!-- List Header mit Titel über Bild -->
<div class="container mb-5">
  <div class="card mb-4 shadow-sm position-relative">
    <% if @list.image.present? %>
      <img src="<%= @list.image %>" class="card-img-top" alt="<%= @list.name %>" style="height: 300px; object-fit: cover;">
    <% end %>
    <h1 class="position-absolute top-50 start-50 translate-middle text-white text-center bg-dark bg-opacity-50 p-3 rounded fw-bold display-3 w-100">
      <%= @list.name %>
    </h1>
  </div>
</div>

<!-- Movies als Cards -->
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @list.movies.each do |movie| %>
      <% bookmark = @list.bookmarks.find_by(movie: movie) %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if movie.poster_url.present? %>
            <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>" style="height: 300px; object-fit: cover;">
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= movie.title %></h5>

            <p class="card-text mb-2" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
              <%= movie.overview %>
            </p>

            <p class="card-text mb-2">
              <span class="text-warning fs-5">★</span> <%= '%.1f' % movie.rating %>
            </p>

            <% if bookmark.comment.present? %>
              <div class="mb-3 p-2 border rounded bg-light text-dark" style="font-size: 0.9rem;">
                <strong>Comment:</strong> <%= bookmark.comment %>
              </div>
            <% end %>

            <div class="mt-auto text-end">
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-secondary btn-sm" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Add a movie Button -->
  <div class="text-center mt-4">
    <%= link_to new_list_bookmark_path(@list), class: "btn btn-primary btn-lg" do %>
      <i class="fas fa-plus me-2"></i> Add a movie
    <% end %>
  </div>
</div>
